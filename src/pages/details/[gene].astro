---
import Layout from "@/layouts/default.astro";
import { fetchIBs, fetchTriboliumGenes } from "@/utils/services/geneService";
import { fetchByGene as fetchPhenotypesByGene } from "@/utils/services/phenotypeService";
import GeneDetails from "@/components/pages/details/GeneDetails";

export const prerender = false;

const { gene = "" } = Astro.params;

const triboliumGene = (await fetchTriboliumGenes([gene]))[0];
const dsRNAs = await fetchIBs(gene);
const phenotypes = await fetchPhenotypesByGene(gene);
---

<Layout>
  <div class="p-6 md:p-10">
    <GeneDetails
      gene={gene}
      triboliumGene={triboliumGene}
      dsRNAs={dsRNAs}
      phenotypes={phenotypes}
      client:load
    />
  </div>
</Layout>
